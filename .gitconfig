[core]
    editor = code --wait
[help]
    autoCorrect = 1
[alias]
    s = status
    ss = status -sb
    b = branch -all -vv
    f = fetch --all --prune
    cb = checkout -b
    co = checkout

    l = log --pretty=format:"%C(yellow)%h\\ %C(cyan)%ad\\%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    lol = log --graph --decorate --oneline

    purr = pull --rebase
    rao = remote add origin

    fixgitignore = !git rm -r --cached .

[fetch]
    prune = true
[push]
    autoSetupRemote = true

[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED

