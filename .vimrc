set encoding=utf-8

colorscheme koehler
set background=dark

set syntax=on
syntax on

set cursorline

set number
set autoindent
set expandtab ts=4 sw=4
set showmatch

# ---

set laststatus=2
set ruler

set hlsearch
set incsearch
set ignorecase
set smartcase

set mouse=a

set pastetoggle=<F11>

set noerrorbells
set visualbell

map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l
